# Bloquer l'accès direct aux fichiers uploadés
# Les fichiers doivent être servis via le contrôleur pour vérifier les permissions

# Apache 2.4+
<IfModule mod_authz_core.c>
    Require all denied
</IfModule>

# Apache 2.2
<IfModule !mod_authz_core.c>
    Order deny,allow
    Deny from all
</IfModule>
